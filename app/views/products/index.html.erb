<% if customer_signed_in? %>
  <%=render partial: 'shared/logout' %>
<% else %>
  <%= render partial: 'shared/signin' %>
<% end %>

<h3 class="text-center">Products for Sale</h3>

<div class="row">
  <div class="col-xs-9 col-xs-offset-1">
    <% @products.each do |product| %>
      <%= render "grid", product: product, order_item: @order_item %>
      <%= render 'payola/transactions/checkout', sellable: product %>
    <% end %>
  </div>
</div>
